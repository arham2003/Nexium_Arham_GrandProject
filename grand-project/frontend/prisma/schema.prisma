generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  email    String   @unique
  name     String?
  image    String?
  usages   Usage[]
  pitches  Pitch[]
}

model Pitch {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String
  featureType FeatureType
  input       String
  output      String
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])
}

model Usage {
  id                  String   @id @default(auto()) @map("_id") @db.ObjectId
  userId              String   @unique
  month               Int
  year                Int
  summarizerCount     Int      @default(0)
  investorEmailCount  Int      @default(0)
  feedbackCount       Int      @default(0)
  elevatorCount       Int      @default(0)
  user                User     @relation(fields: [userId], references: [id])
}

enum FeatureType {
  PITCH_SUMMARIZER
  INVESTOR_EMAIL
  PITCH_FEEDBACK
  ELEVATOR_REWRITE
}
